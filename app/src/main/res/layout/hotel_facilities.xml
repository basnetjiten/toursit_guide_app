<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle.Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/hotel_facilities_title"
            android:textAppearance="@style/TextStyle.Title" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_green_100" />

        <TextView
            android:id="@+id/hd_hotel_facilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_spacing_horizontal"
            android:text="@string/no_offer"

            android:textAppearance="@style/TextStyle.Body1"

            >

        </TextView>
    </LinearLayout>

</android.support.v7.widget.CardView>