<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotel_content_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/app_bar_hotel_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/hotel_gallery" />

        <include layout="@layout/hotel_description" />

        <include layout="@layout/hotel_room_description" />

        <include layout="@layout/hotel_facilities" />

        <include layout="@layout/hotel_food_offer" />
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/CardStyle.Home"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:visibility="invisible">
            </android.support.v7.widget.CardView>
    </LinearLayout>

</ScrollView>
