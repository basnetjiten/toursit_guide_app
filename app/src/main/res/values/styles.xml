<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

        <!-- AppCompat Attributes -->
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_green_700</item>

        <!-- AppCompat Control Attributes -->
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="colorControlNormal">@color/md_green_500</item>
        <item name="colorControlActivated">@color/md_green_500</item>
        <item name="colorControlHighlight">@color/md_green_900</item>

        <!-- AppCompat Dialog Attributes -->
        <item name="dialogTheme">@style/AppTheme.Dialog.Green</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Green</item>
    </style>


    !-- Green Dialog Theme -->

    <style name="AppTheme.Dialog.Green" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_red_200</item>
        <item name="colorAccent">@color/md_green_700</item>
    </style>

    <!-- Green Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Green" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_green_700</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Text Styles -->
    <style name="TextStyle" parent="TextAppearance.AppCompat" />

    <style name="TextStyle.Title" parent="TextAppearance.AppCompat.Title" />

    <style name="TextStyle.Body1" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextStyle.Body2" parent="TextAppearance.AppCompat.Body2" />

    <!-- Edit Text Styles -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText" />

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout" />

    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner" />

    <style name="SpinnerStyle.Underlined" parent="Widget.AppCompat.Spinner.Underlined" />


    <style name="CardStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="CardStyle.Home">
        <item name="contentPaddingBottom">@dimen/content_spacing_vertical</item>
        <item name="contentPaddingLeft">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingRight">@dimen/content_spacing_horizontal</item>
        <item name="contentPaddingTop">@dimen/content_spacing_vertical</item>
        <item name="android:layout_marginBottom">@dimen/view_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginRight">@dimen/screen_spacing_horizontal</item>
        <item name="android:layout_marginTop">@dimen/view_spacing_small</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardStyle.Home.SelectableItemStyle.Rect" parent="CardStyle.Home">
        <item name="android:background">@drawable/state_list_selectable_rect_green</item>
    </style>
    <!-- Selectable Item Styles -->

    <style name="SelectableItemStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SelectableItemStyle.Rect">
        <item name="android:background">@drawable/state_list_selectable_rect_green</item>
    </style>

</resources>
